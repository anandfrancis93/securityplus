rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User progress - users can only read/write their own data
    // SECURITY FIX: Changed from /userProgress/ to /users/ to match actual collection name
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Quiz sessions - users can only access their own sessions
    match /quizSessions/{sessionId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
    }

    // Pairing codes - SECURITY FIX: users can only read codes they created
    match /pairingCodes/{codeId} {
      // Users can only read their own pairing codes
      allow read: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      // Users can only create codes for themselves
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      // Users can only delete their own codes
      allow delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      // Allow anyone to validate/delete after successful pairing (handled by function)
      allow update: if false; // Prevent updates, only create/delete
    }

    // Flashcards - users can only access their own flashcards
    match /flashcards/{flashcardId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
    }

    // Flashcard reviews - users can only access their own reviews
    match /flashcardReviews/{reviewId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
    }

    // Flashcard decks - users can only access their own decks
    match /flashcardDecks/{deckId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
    }
  }
}
